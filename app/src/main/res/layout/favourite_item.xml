<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="262dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fvrCard"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_marginStart="5dp"

    >
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="262dp"

        >
        <ImageView
            android:layout_width="337dp"
            android:layout_height="159dp"
            android:id="@+id/favoriteImage"
            android:layout_marginStart="7dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banhang"
            />
        <TextView
            android:layout_width="306dp"
            android:layout_height="24dp"
            android:id="@+id/fvrTitle"
            android:layout_marginTop="160dp"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:text="Khoa hoc danh cho nguoi co ban"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="5dp"
            >
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/redstart"
                android:id="@+id/btnFavorite"
                />
            <TextView
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:text="4.0"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="227dp"
            android:layout_height="21dp"
            android:text="Học 3 buổi trong một tuần"
            android:layout_marginTop="190dp"
            android:layout_marginStart="175dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:alpha="0.7"
            />
        <TextView
            android:id="@+id/fvrLang"
            android:layout_width="227dp"
            android:layout_height="21dp"
            android:text="2.000.000 VND"
            android:layout_marginTop="220dp"
            android:layout_marginStart="7dp"

            android:textStyle="bold"
            android:textSize="12sp"
            android:alpha="0.7"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>