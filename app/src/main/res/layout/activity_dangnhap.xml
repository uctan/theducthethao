            android:layout_height="55dp" />

        <EditText
            android:id="@+id/login_username"
            android:fontFamily="IBM Plex Sans"
            android:textSize="14sp"
            android:textColor="@color/t_n___y____color"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="266dp"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:hint="User đăng nhập"
            android:background="@null"
            />
        <View   android:id="@+id/hai"
            android:background="@drawable/rectangle_39950_shape"
            android:alpha="0.54000002145767"
            android:layout_marginStart="27dp"
            android:layout_marginTop="340dp"
            android:layout_width="360dp"
            android:layout_height="55dp" />

        <EditText
            android:id="@+id/login_password"
            android:fontFamily="IBM Plex Sans"
            android:textSize="14sp"
            android:textColor="@color/t_n___y____color"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="356dp"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:hint="Mật khẩu"
            android:background="@null"
            android:inputType="textPassword"
            />
    </RelativeLayout>
</ScrollView>


