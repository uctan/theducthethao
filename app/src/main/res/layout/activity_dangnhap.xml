

<ScrollView android:id="@+id/dangnhap"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dangnhap"
    >

    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >



        <RelativeLayout android:id="@+id/page_dangnhap_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View   android:id="@+id/_bg__dangnhap_ek2"
                android:background="@drawable/_bg__dangnhap_ek2_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="393dp"
                android:layout_height="786dp" />

            <View   android:id="@+id/rectangle_39945"
                android:background="@drawable/rectangle_39945_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="433dp"
                android:layout_height="204dp" />

            <TextView android:id="@+id/sign_in"
                android:fontFamily="Bebas Neue"
                android:textStyle="bold"
                android:alpha="0.1"
                android:textSize="88sp"
                android:textColor="@color/_bg__dangnhap_ek2_color"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="60dp"
                android:layout_width="409dp"
                android:layout_height="218dp"
                android:text="@string/sign_in_string"
                />

            <TextView android:id="@+id/__ng_nh_p_t_i_kho_n"
                android:fontFamily="Poppins"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/_bg__dangnhap_ek2_color"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="128dp"
                android:layout_width="328dp"
                android:layout_height="62dp"
                android:text="@string/__ng_nh_p_t_i_kho_n_string"
                />

            <ImageButton
                android:id="@+id/login_button"
                android:layout_width="378dp"
                android:layout_height="44dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="446dp"
                android:src="@drawable/btnden1"
                android:background="@color/white"
                />
            <TextView android:id="@+id/__ng_nh_p"
                android:fontFamily="IBM Plex Sans"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="436dp"
                android:layout_width="338dp"
                android:layout_height="58dp"
                android:text="@string/__ng_nh_p_string"
